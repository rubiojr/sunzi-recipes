# Adapted from:
# https://gist.github.com/1506392
#
description     "Carbon server"

start on filesystem or runlevel [2345]
stop on runlevel [!2345]

umask 022
expect daemon
respawn

pre-start script
    test -d /opt/graphite || { stop; exit 0; }
end script
pre-stop script
    /opt/graphite/bin/carbon-cache.py stop
end script

chdir /opt/graphite

exec /opt/graphite/bin/carbon-cache.py start


